@{
    ViewBag.Title = "crearPaciente";
}
@Html.Partial("Navigation")
@Html.Partial("Topbar")

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="col-xl-12 col-lg-7 ">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Preparacion de paciente</h1>
        </div>
        <div class="content-wrapper">
            <div class="col-md-12 col-sm-1 col-xl-12">
                <div class="card  shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Ingrese los datos del paciente</h6>
                    </div>
                    <div class="card-body">
                        <form class="user">
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">Codigo Expediente</span></h6>
                                    <input class="form-control" type="text" id="NombresPaciente" readonly placeholder="CE102018" pattern="[A-Za-z]">
                                </div>
                                <div class="col-sm-6">
                                    <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">Fecha y hora de cita</span></h6>
                                    <input class="form-control" type="datetime-local" id="fecha" readonly>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">Nombres</span></h6>
                                    <input class="form-control" type="text" id="NombresPaciente" readonly placeholder="Nombres">
                                </div>
                                <div class="col-sm-6">
                                    <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">Apellidos</span></h6>
                                    <input class="form-control" type="text" id="ApellidosPaciente" readonly placeholder="Apellidos">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-2 mb-3 mb-sm-0">
                                    <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">Temperatura (°C) </span></h6>
                                    <input class="form-control" type="number" id="PesoPaciente" min="30" placeholder="00" max="50">
                                </div>
                                <div class="col-sm-2 mb-3 mb-sm-0">
                                    <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">Peso (Lb) </span></h6>
                                    <input class="form-control" type="number" id="PesoPaciente" min="0" placeholder="000" max="999">
                                </div>
                                <div class="col-sm-2 mb-3 mb-sm-0">
                                    <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">Presion arterial </span></h6>
                                    <input class="form-control" type="number" id="PesoPaciente" min="30" placeholder="000" max="500">
                                </div>
                                <div class="col-sm-2 col-md-3">
                                    <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">Pulso (Lat/min)</span></h6>
                                    <input class="form-control" type="number" id="AlturaPaciente" min="0" max="300" placeholder="000">
                                </div>
                                <div class="col-sm-2 col-md-3">
                                    <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">Fecha de nacimiento</span></h6>
                                    <input type="date" class="form-control" id="datepicker" readonly />
                                </div>
                            </div>
                            <div class="form-group">
                                <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">Razon de la cita</span></h6>
                                <input class="form-control" type="text" id="DireccionPaciente" placeholder="Razon de la cita" />
                            </div>
                            <div class="form-group">
                                <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">Medicamentos que toma actualmente</span></h6>
                                <input class="form-control" type="text" id="DireccionPaciente" placeholder="Medicamento1, Medicamento2" />
                            </div>
                            <div class="form-group col-md-6">
                                <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">Medico que lo atendera</span></h6>
                                <select id="inputState" class="form-control">
                                    <option>Airi Satou</option>
                                    <option>Bradley Greer</option>
                                    <option>Caesar Vance</option>
                                    <option>Charde Marshall</option>
                                    <option>Dai Rios</option>
                                </select>
                            </div>

                            <div>
                                <a href="Consulta" class="btn btn-warning btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-exclamation-triangle"></i>
                                    </span>
                                    <span class="text">Regresar</span>
                                </a>
                                <a href="#" data-toggle="modal" data-target="#sendModal" class="btn btn-success btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-check"></i>
                                    </span>
                                    <span class="text">Guardar</span>
                                </a>

                            </div>

                        </form>

                        <!-- Send Modal-->
                        <div class="modal fade" id="sendModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">¿El paciente esta preparado?</h5>
                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Seleccione "Guardar" si está listo/a para enviar el paciente con el medico.<br />
                                        Seleccione "Cancelar" si desea hacer algun cambio.
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-danger" type="button" data-dismiss="modal">Cacelar</button>
                                        <a class="btn btn-success" href="#">Guardar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End of Main Content -->


        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
</div>
@Html.Partial("Footer")



@{
    ViewBag.Title = "crearPaciente";
}
@Html.Partial("Navigation")
@Html.Partial("Topbar")

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="col-xl-12 col-lg-7 ">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Crear cita de paciente</h1>

        </div>
        <div class="content-wrapper">
            <div class="col-md-12 col-sm-1 col-xl-12">
                <div class="card  shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Ingrese los datos del paciente</h6>
                    </div>
                    <div class="card-body">
                        <form class="user">
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">Codigo de expediente</span></h6>
                                    <input type="text" class="form-control" id="id" readonly />
                                </div>
                                <div class="col-sm-6">
                                    <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">Fecha y hora de cita</span></h6>
                                    <input type="datetime-local" class="form-control" id="datepicker" />
                                </div>
                            </div>
                            <div class="form-group ">
                                <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">Motivo de la cita</span></h6>
                                <input class="form-control" type="text" id="motivoCita" placeholder="Razon de la cita" pattern="[A-Za-z]">
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">Nombres</span></h6>
                                    <input class="form-control" type="text" id="NombresPaciente" readonly placeholder="Nombres" pattern="[A-Za-z]">
                                </div>
                                <div class="col-sm-6">
                                    <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">Apellidos</span></h6>
                                    <input class="form-control" type="text" id="ApellidosPaciente" readonly placeholder="Apellidos" pattern="[A-Za-z]">
                                </div>
                            </div>
                            <div class="form-group">
                                <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">Dirección</span></h6>
                                <textarea class="form-control" id="DireccionPaciente" rows="3" maxlength="300" readonly placeholder="Dirección del paciente"></textarea>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">DUI</span></h6>
                                    <input class="form-control" type="number" id="DUIPaciente" min="0" readonly placeholder="00000000-0" required />
                                </div>
                                <div class="col-sm-6">
                                    <h6 class="m-0 font-weight-bold text-primary"><span class="label label-default">Correo electrónico</span></h6>
                                    <input class="form-control" type="text" id="CorreoPaciente" placeholder="correo@ejemplo.com" readonly>
                                </div>
                            </div>
                            <div>
                                <a href="Cita" class="btn btn-warning btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-exclamation-triangle"></i>
                                    </span>
                                    <span class="text">Regresar</span>
                                </a>
                                <a href="#" data-toggle="modal" data-target="#sendModal" class="btn btn-success btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-check"></i>
                                    </span>
                                    <span class="text">Crear cita</span>
                                </a>

                            </div>

                        </form>

                        <!-- Send Modal-->
                        <div class="modal fade" id="sendModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">¿Desea crear la cita en el sistema?</h5>
                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Seleccione "Guardar" si está listo/a para finalizar la creacion de la cita.<br />
                                        Seleccione "Cancelar" si desea hacer algun cambio o ya no desea crear la cita.
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-danger" type="button" data-dismiss="modal">Cacelar</button>
                                        <a class="btn btn-success" href="#">Guardar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End of Main Content -->


        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
</div>
@Html.Partial("Footer")


